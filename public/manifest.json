{
  "manifest_version": 3,
  "name": "Next.js 浏览器扩展模板",
  "short_name": "e-t",
  "version": "0.1.0",
  "description": "Next.js Extension Template, Demo Example by luohuayong. https://github.com/luohuayong/ExtensionTemplate",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}
